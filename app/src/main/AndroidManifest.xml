<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.redyellowgreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Red">
            <intent-filter>
                <action android:name="android.intent.action.Red" />
            </intent-filter>
        </activity>
        <activity android:name=".Yellow">
            <intent-filter>
                <action android:name="android.intent.action.Yellow" />
            </intent-filter>
        </activity>
        <activity android:name=".Green">
            <intent-filter>
                <action android:name="android.intent.action.Green" />
            </intent-filter>
        </activity>
    </application>

</manifest>